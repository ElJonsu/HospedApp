@using HospedApp.Core.Entities;
@model IEnumerable<Hotel>;
@{
    ViewData["Title"] = "Hotels";
}

<div>
    <br>
    <div class=" text-center">
        <h1>Lista de hoteles</h1>
    </div>
    <br>

    <div class="input-group mb-3 input">
        <input id="searchInput" type="text" class="form-control" placeholder="Buscar">
    </div>
    <div>
        @if (Model.Count() == 0 && Context.Request.RouteValues.ContainsKey("Index"))
        {
            <p>No se encontraron hoteles.</p>
        }
        else
        {

            <div>
                <table class="table table-responsive ">
                    <thead>
                        <tr>
                            <th scope="col">Hotel</th>
                            <th scope="col">Email</th>
                            <th scope="col">Sitio Web</th>
                            <th scope="col">Estrellas</th>
                            <th scope="col">Acci√≥n</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hotel in Model)
                        {
                            <tr>
                                <td>@hotel.Name</td>
                                <td>@hotel.Email</td>
                                <td>@hotel.Web</td>
                                <td>@hotel.Star</td>
                                <td>
                                    <a asp-action="Modify" asp-route-id="@hotel.IdHotel">Modificar</a>
                                    <a asp-action="Detail" asp-route-id="@hotel.IdHotel">Detalles</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>