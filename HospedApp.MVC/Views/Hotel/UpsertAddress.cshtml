@using HospedApp.Core.Entities;
@model Address;
@{
    var texto = Model!.IdAddress != 0 ? "Modificar direccion del hotel" : "Alta direccion del hotel";
    ViewData["Title"] = texto;
}

<form asp-controller="Hotel" asp-action="UpsertAddress" method="post">
    <div asp-validation-summary="All"></div>
    @if (Model != null)
    {
        <div><input type="hidden" asp-for="@Model.IdAddress" /></div>
    }
    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="PostalCode" class="form-label">Codigo postal</label>
            <input asp-for="PostalCode" class="form-control" placeholder="Ingrese su Nombre" required />
        </div>
        <div class="col-md-6">
            <label asp-for="Domicile" class="form-label">Domicilio</label>
            <input asp-for="Domicile" class="form-control" placeholder="Ingrese su Web" required />
        </div>
    </div>
    <div class="mb-3">
        @if (Model!.IdAddress != 0)
        {
            <button type="submit" class="btn btn-warning">@texto</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary">@texto</button>
        }
    </div>
</form>

@if (TempData["Error"] != null)
{
    <p>@TempData["Error"]</p>
}
